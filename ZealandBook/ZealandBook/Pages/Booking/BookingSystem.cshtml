@page
@model ZealandBook.BookingSystemModel
@{
    ViewData["Title"] = "Booking System";
}

<h1>Booking System</h1>

<form method="get" class="search-form">
    <div class="form-group">
        <label for="specificDate">Specific Date:</label>
        <input type="date" id="specificDate" name="specificDate" required class="form-control">
    </div>
    <div class="form-group">
        <label for="specificTimeFrom">Specific Time From:</label>
        <input type="time" id="specificTimeFrom" name="specificTimeFrom" required class="form-control">
    </div>
    <div class="form-group">
        <label for="specificTimeTo">Specific Time To:</label>
        <input type="time" id="specificTimeTo" name="specificTimeTo" required class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

@if (Model.rooms != null && Model.rooms.Any())
{
    <h2>Available Rooms:</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Room Name</th>
                <th>Room Type</th>
                <th>Room Size</th>
                <th>Room Facilities</th>
                <th>Building</th>
                <th>Description</th>
                <th></th> <!-- Add an empty header for the "Book" button column -->
            </tr>
        </thead>
        <tbody>
            @foreach (var room in Model.rooms)
            {
                <tr>
                    <td>@room.Room_Name</td>
                    <td>@room.Room_Type</td>
                    <td>@room.Room_Size</td>
                    <td>@room.RoomFacilities</td>
                    <td>@room.Building</td>
                    <td>@room.Description</td>
                    <td>
                        <form method="post" asp-page="Booking" asp-route-roomId="@room.Room_ID">
                            <button type="submit" class="btn btn-primary">Book</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}



