@page
@model ZealandBook.MyBookingsModel
@{
    ViewData["Title"] = "My Bookings";
}

<h1 style="color:white">@ViewData["Title"]</h1>

@if (Model.Bookings != null && Model.Bookings.Any())
{
    <table>
        <thead>
            <tr>
                <th>Room Name</th>
                <th>From</th>
                <th>To</th>
                <th>Date</th>
                <th>Booking ID</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
                <tr>
                    <td>@Model.rooms.Room_Name</td>
                    <td>@Model.bookings.DateFrom</td>
                    <td>@Model.bookings.DateTo</td>
                    <td>@Model.bookings.Date.ToString("dd-MM-yyyy")</td>
                    <td>@Model.bookings.BookingID</td>
                    <td>
                        <a asp-page="/Booking/DeleteBooking" asp-route-id="@Model.bookings.BookingID" class="btn btn-danger" style="font-size: 12px; padding: 5px 10px;">Delete</a>
                    </td>
                </tr>
        </tbody>
    </table>
}
else
{
    <p style="color:white">No bookings found.</p>
}
