@page
@model ZealandBook.MyBookingsModel
@{
    ViewData["Title"] = "My Bookings";
}

<h1>@ViewData["Title"]</h1>

@if (Model.Bookings != null && Model.Bookings.Any())
{
    <table>
        <thead>
            <tr>
                <th>Booking ID</th>
                <th>From</th>
                <th>To</th>
                <th>Teacher ID</th>
                <th>Room ID</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model.Bookings)
            {
                <tr>
                    <td>@booking.BookingID</td>
                    <td>@booking.DateFrom</td>
                    <td>@booking.DateTo</td>
                    <td>@booking.Teacher_Id</td>
                    <td>@booking.Room_Id</td>
                    <td>
                        <a asp-page="/Booking/DeleteBooking" asp-route-id="@booking.BookingID" class="btn btn-danger" style="font-size: 12px; padding: 5px 10px;">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No bookings found.</p>
}
