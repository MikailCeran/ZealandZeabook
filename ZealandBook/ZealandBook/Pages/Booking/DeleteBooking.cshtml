@page
@model DeleteModel
@{
    ViewData["Title"] = "Delete Booking";
}

<div class="delete-booking-container">
    <h1 style="color: red">Delete Booking</h1>

    <div style="background-color: #ffe6e6; padding: 10px; border: 1px solid red;">
        <h3 style="color: #cc0000;">Are you sure you want to delete this booking?</h3>
        <div class="booking-details">
            <h4>Booking Details</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt><strong>Date From:</strong></dt>
                <dd>@Html.DisplayFor(model => model.Booking.DateFrom)</dd>
                <dt><strong>Date To:</strong></dt>
                <dd>@Html.DisplayFor(model => model.Booking.DateTo)</dd>
                <!-- Include more details as needed -->
            </dl>

            <form method="post">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-page="/Booking/GetBooking" class="back-link">Back to List</a>
            </form>
        </div>
    </div>
</div>