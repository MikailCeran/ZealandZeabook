@page
@model ZealandBook.CreateRoomModel
@{
    ViewData["Title"] = "Create";
}
<head>
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="  ModelOnly  " class="text-danger">
            </div>
            <div class="form-group">
                <label asp-for="@Model.room.Room_Name" class="control-label"></label>
                <input asp-for="@Model.room.Room_Name" class="form-control" />
                <label for="select-menu">Choose an option:</label>
                <span asp-validation-for="@Model.room.Room_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.room.Room_Type" class="control-label"></label>
                <input asp-for="@Model.room.Room_Type" class="form-control" />
                <span asp-validation-for="@Model.room.Room_Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.room.Room_Size" class="control-label"></label>
                <input asp-for="@Model.room.Room_Size" class="form-control" />
                <span asp-validation-for="@Model.room.Room_Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.room.RoomFacilities" class="control-label"></label>
                <input asp-for="@Model.room.RoomFacilities" class="form-control" />
                <span asp-validation-for="@Model.room.RoomFacilities" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.room.Building" class="control-label"></label>
                <input asp-for="@Model.room.Building" class="form-control" />
                <span asp-validation-for="@Model.room.Building" class="text-danger"></span>

            </div>    <div class="form-group">
                <label asp-for="@Model.room.Description" class="control-label"></label>
                <input asp-for="@Model.room.Description" class="form-control" />
                <span asp-validation-for="@Model.room.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>