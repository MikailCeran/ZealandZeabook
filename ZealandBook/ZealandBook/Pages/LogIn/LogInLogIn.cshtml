@page
@model ZealandBook.LogInLogInModel
@{
}
<head>
	<title>Log ind</title>
	<style>
		body {
			background-color: #f2f2f2;
			font-family: Arial, sans-serif;
		}

		h1 {
			text-align: center;
			margin-top: 50px;
			background-color: gold
			padding: 20px;
			color: #fff;
		}

		form {
			width: 300px;
			margin: 50px auto;
			padding: 20px;
			background-color: #fff;
			border-radius: 5px;
			box-shadow: 0px 0px 10px #888888;
		}

		input[type="text"], input[type="password"] {
			display: block;
			width: 100%;
			margin-bottom: 20px;
			padding: 10px;
			border-radius: 5px;
			border: none;
			box-shadow: 0px 0px 5px #888888;
		}

		input[type="submit"] {
			display: block;
			width: 100%;
			background-color: gold;
			color: #fff;
			padding: 10px;
			border: none;
			border-radius: 5px;
			cursor: pointer;
		}

			input[type="submit"]:hover {
				background-color: #3e8e41;
			}
	</style>
</head>
<body>
	<h1>Log ind</h1>
	<form method="post">
		<label for="username">Brugernavn:</label>
		<input type="text" id="username" name="Email" asp-for="Email">
		<span asp-validation-for="Email"></span>

		<label for="password">Kodeord:</label>
		<input type="password" id="password" name="Password" asp-for="Password">
		<span asp-validation-for="Password"></span>

		<input type="submit" value="Log ind">
		<br>
		<br>
		<div asp-validation-summary="ModelOnly"></div>
	</form>
</body>



